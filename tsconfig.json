{
  "compilerOptions": {
    "module": "Node16",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
  "ts-node": { "esm": true },
  "include": ["src/**/*.ts"]
}
